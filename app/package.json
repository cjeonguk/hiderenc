{
  "name": "hider",
  "version": "2.0.0",
  "description": "GUI tool to encrypt&decrypt files",
  "main": "out/main/main.js",
  "author": "Jeonguk Choi",
  "license": "MIT",
  "repository": "https://github.com/cjeonguk/hider",
  "homepage": "https://github.com/cjeonguk/hider#readme",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.3",
    "electron-updater": "^5.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tar": "^6.1.11",
    "@hider/core": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/tar": "^6.1.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.3.1",
    "css-loader": "^6.7.1",
    "html-webpack-plugin": "^5.5.0",
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3"
  },
  "scripts": {
    "start:main": "tsc -p ./src/main && swc ./src/main -d out && NODE_ENV=development electron .",
    "start:renderer": "tsc -p ./src/renderer && webpack serve",
    "test": "tsc -p ./src/main && tsc -p ./src/renderer",
    "build": "swc ./src/main -d out && webpack --mode=production",
    "build:main": "tsc -p ./src/main && swc ./src/main -d out",
    "build:renderer": "tsc -p ./src/renderer && webpack --mode=production",
    "dist": "electron-builder -mwl --x64 --publish never",
    "dist:linux": "electron-builder --linux --x64 --publish never",
    "dist:win": "electron-builder --win --x64 --publish never",
    "dist:mac": "electron-builder --mac --x64 --arm64 --publish never",
    "dist:mac:x64": "electron-builder --mac --x64 --publish never",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish never"
  },
  "build": {
    "appId": "com.electron.hider",
    "electronVersion": "20.1.0",
    "productName": "Hider",
    "artifactName": "${name}-v${version}-${os}-${arch}.${ext}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "license": "LICENSE",
      "perMachine": true,
      "oneClick": false,
      "runAfterFinish": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "tar.gz",
      "icon": "build/64x64.png"
    },
    "fileAssociations": {
      "ext": "enc",
      "name": "Encrypted file"
    }
  }
}

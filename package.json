{
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.241",
    "@types/crypto-js": "^4.1.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "css-loader": "^6.7.1",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.4",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "name": "hider",
  "version": "1.3.0",
  "description": "GUI tool to encrypt&decrypt files",
  "main": "out/main/main.js",
  "author": "Jeonguk Choi",
  "license": "MIT",
  "repository": "https://github.com/cjeonguk/hider",
  "homepage": "https://github.com/cjeonguk/hider#readme",
  "private": true,
  "scripts": {
    "start:main": "tsc -p ./src/main && swc ./src/main -d out && NODE_ENV=development electron .",
    "start:renderer": "tsc -p ./src/renderer && webpack serve",
    "test": "tsc -p ./src/main && tsc -p ./src/renderer",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "build": "swc ./src/main -d out && webpack --mode=production",
    "build:main": "tsc -p ./src/main && swc ./src/main -d out",
    "build:renderer": "tsc -p ./src/renderer && webpack --mode=production",
    "dist": "electron-builder -mwl --x64 --publish never",
    "dist:linux": "electron-builder --linux --x64 --publish never",
    "dist:win": "electron-builder --win --ia32 --x64 --publish never",
    "dist:mac": "electron-builder --mac --x64 --arm64 --publish never",
    "dist:mac:x64": "electron-builder --mac --x64 --publish never",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish never"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.2",
    "crypto-js": "^4.1.1",
    "electron-updater": "^5.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.electron.hider",
    "productName": "Hider",
    "artifactName": "${name}-v${version}-${os}-${arch}.${ext}",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "license": "LICENSE",
      "perMachine": true,
      "oneClick": false,
      "runAfterFinish": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "tar.gz",
      "icon": "build/64x64.png"
    },
    "fileAssociations": {
      "ext": "enc",
      "name": "Encrypted file"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  }
}

{
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.4",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.5",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "app",
    "packages/core",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "start": "yarn workspace hider start",
    "test": "echo \"No tests available\"",
    "lint": "yarn workspaces run lint && eslint \"app/src/**/*.{ts,tsx}\" packages/*/src/**/*.ts",
    "fmt": "prettier --check \"app/src/**/*.{ts,tsx}\" packages/*/src/**/*.ts",
    "dist:win": "yarn workspace hider dist:win",
    "dist:mac": "yarn workspace hider dist:mac",
    "dist:linux": "yarn workspace hider dist:linux",
    "cli": "./packages/cli/out/cli.js"
  },
  "private": true,
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "scope": "cli",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "app"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "app/package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./scripts/build.sh"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "./app/dist/*.exe"
            },
            {
              "path": "./app/dist/*.tar.gz"
            },
            {
              "path": "./app/dist/*.dmg"
            },
            {
              "path": "./app/dist/latest.yml"
            },
            {
              "path": "./app/dist/latest-mac.yml"
            }
          ]
        }
      ]
    ]
  }
}

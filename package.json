{
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.241",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.1",
    "prettier": "2.7.1",
    "semantic-release": "^19.0.5",
    "typescript": "^4.7.4"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace hider build && yarn workspace @hider/core build",
    "test": "yarn workspace hider test && yarn workspace @hider/core test",
    "lint": "eslint app/src/**/*.ts app/src/**/*.tsx packages/*/src/**/*.ts",
    "dist:win": "yarn workspace hider dist:win",
    "dist:mac": "yarn workspace hider dist:mac",
    "dist:linux": "yarn workspace hider dist:linux"
  },
  "private": true,
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "app"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "app/package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./.github/scripts/build.sh"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "./app/dist/*.exe"
            },
            {
              "path": "./app/dist/*.tar.gz"
            },
            {
              "path": "./app/dist/*.dmg"
            },
            {
              "path": "./app/dist/latest.yml"
            },
            {
              "path": "./app/dist/latest-mac.yml"
            }
          ]
        }
      ]
    ]
  }
}
